<% if @toy.errors.any? %>
  <% @toy.errors.full_messages.each do |msg| %>
    <div><%= msg %></div>
  <% end %>
<% end %>

<%= form_for @toy do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :url %>
  <%= f.text_field :url %><br>

  <%= f.submit "Submit Link" %>
<% end %>
